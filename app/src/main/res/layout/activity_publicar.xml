<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ubicacion_button"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@android:color/holo_blue_light"
                android:text="Seleccionar Ubicación en Mapa"
                android:translationX="65dp"
                android:translationY="80dp" />

            <TextView
                android:id="@+id/ubicacion_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:translationX="20dp"
                android:translationY="120dp" />

            <TextView
                android:id="@+id/titulo_texto"
                android:layout_width="297dp"
                android:layout_height="74dp"
                android:text="Subir Propiedad"
                android:textSize="27sp"
                android:textStyle="bold"
                android:translationX="80dp"
                android:translationY="0dp" />

            <EditText
                android:id="@+id/ubicacion_input"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ubicacion_texto"
                android:layout_marginTop="67dp"
                android:hint="Ingrese una descripción"
                android:textColorHint="#808080"
                android:translationX="50dp"
                android:translationY="70dp" />

            <EditText
                android:id="@+id/reglas_input"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ubicacion_input"
                android:layout_marginTop="48dp"
                android:hint="Ingrese las Reglas"
                android:textColorHint="#808080"
                android:translationX="50dp"
                android:translationY="30dp" />

            <TextView
                android:id="@+id/precio_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reglas_input"
                android:layout_marginTop="40dp"
                android:text="Precio por noche: $0"
                android:textSize="18sp"
                android:translationX="50dp"
                android:translationY="0dp" />

            <SeekBar
                android:id="@+id/seek_bar_precio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precio_text_view"
                android:layout_marginTop="10dp"
                android:max="10000"
                android:translationX="45dp"
                android:translationY="0dp" />

            <TextView
                android:id="@+id/capacidad_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seek_bar_precio"
                android:layout_marginTop="1dp"
                android:text="Capacidad: 0"
                android:textSize="18sp"
                android:translationX="50dp"
                android:translationY="20dp" />

            <SeekBar
                android:id="@+id/seek_bar_capacidad"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/capacidad_text_view"
                android:max="20"
                android:progress="0"
                android:enabled="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp"
                android:translationX="45dp"
                android:translationY="5dp" />


            <Button
                android:id="@+id/amenidades_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seek_bar_capacidad"
                android:layout_marginTop="27dp"
                android:background="@android:color/holo_blue_light"
                android:text="Seleccionar Amenidades"
                android:translationX="90dp"
                android:translationY="0dp" />

            <Button
                android:id="@+id/agregar_imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amenidades_seleccionadas_text_view"
                android:layout_marginTop="21dp"
                android:background="@android:color/holo_blue_light"
                android:text="Agregar Imagen"
                android:translationX="115dp"
                android:translationY="10dp" />

            <LinearLayout
                android:id="@+id/contenedor_imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agregar_imagen"
                android:layout_marginTop="31dp"
                android:orientation="horizontal"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/finalizar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contenedor_imagen"
                android:layout_marginTop="21dp"
                android:text="Finalizar"
                android:translationX="146dp"
                android:translationY="00dp" />

            <TextView
                android:id="@+id/amenidades_seleccionadas_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amenidades_button"
                android:layout_marginTop="27dp"
                android:text=""
                android:translationX="30dp"
                android:translationY="0dp" />



        </RelativeLayout>
    </ScrollView>
</FrameLayout>




